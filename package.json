{
  "name": "the-beat-server",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "aws-sdk": "^2.1335.0",
    "axios": "^1.3.4",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "~4.16.1",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.0.1",
    "mongodb-memory-server": "^8.12.1",
    "mongoose": "^6.2.8",
    "morgan": "~1.9.1",
    "socket.io": "^4.6.1"
  },
  "scripts": {
    "start": "node ./src/bin/www",
    "dev": "npm-run-all --parallel dev:*",
    "dev:server": "NODE_ENV=development nodemon ./src/bin/www",
    "dev:socket": "NODE_ENV=development nodemon ./src/utils/socket",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test": "NODE_ENV=test jest"
  },
  "devDependencies": {
    "eslint": "^8.36.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.4",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/**/*.(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write ./src",
      "eslint --fix ./src"
    ]
  }
}
